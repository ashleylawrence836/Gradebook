@model IEnumerable<Gradebook.Models.Grade.GradeListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Grades</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Score)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AssignmentId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StudentId)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.GradeId }) |
        @Html.ActionLink("Details", "Details", new { id = item.GradeId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.GradeId })
    </td>
</tr>
    }

</table>
